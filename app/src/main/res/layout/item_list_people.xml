<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/list_people_image"
    android:layout_width="60dp"
    android:layout_height="60dp"
    tools:src="@drawable/my_photo"/>

  <TextView
    android:id="@+id/list_people_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@+id/list_people_image"
    tools:text="Gabriel Costa"/>

  <TextView
    android:id="@+id/list_people_phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@+id/list_people_image"
    app:layout_constraintTop_toBottomOf="@+id/list_people_name"
    tools:text="(11) 12345-6789"/>

</android.support.constraint.ConstraintLayout>